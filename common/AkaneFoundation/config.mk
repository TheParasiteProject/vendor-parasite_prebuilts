# Akane Foundation
IMPORT_AKANE_FOUNDATION_SOONG_NAMESPACES ?= false

# Gramophone
TARGET_INCLUDE_GRAMOPHONE ?= true
ifeq ($(TARGET_INCLUDE_GRAMOPHONE),true)
PRODUCT_PACKAGES += \
    Gramophone

IMPORT_AKANE_FOUNDATION_SOONG_NAMESPACES := true
endif

# Omni
TARGET_INCLUDE_OMNI ?= true
ifeq ($(TARGET_INCLUDE_OMNI),true)
PRODUCT_PACKAGES += \
    Omni

IMPORT_AKANE_FOUNDATION_SOONG_NAMESPACES := true
endif

# Soong
ifeq ($(IMPORT_AKANE_FOUNDATION_SOONG_NAMESPACES),true)
PRODUCT_SOONG_NAMESPACES += \
    $(PARASITE_PREBUILTS)/common/AkaneFoundation
endif
